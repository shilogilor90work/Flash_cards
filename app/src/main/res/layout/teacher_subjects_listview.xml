<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/teacher_subjects_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="1"

        tools:text="subjects" />

    <Button
        android:id="@+id/teacher_subject_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Delete"

        android:textSize="14sp"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/teacher_move_to_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Students"

        android:textSize="14sp"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/teacher_btn_definitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:text="Definitions" />
</LinearLayout>